<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.ttb.integration.perspectives.ErlangTracingPerspective"
            icon="icons/perspective.gif"
            id="org.ttb.integration.perspectives.ErlangTracingPerspective"
            name="Erlang Tracing">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.erlide.views"
            class="org.ttb.integration.views.ControlPanelView"
            icon="icons/controlPanelView.gif"
            id="org.ttb.integration.views.ControlPanelView"
            name="Erlang tracing control panel">
      </view>
      <view
            allowMultiple="false"
            category="org.erlide.views"
            class="org.ttb.integration.views.TraceBrowserView"
            icon="icons/treeViewerView.gif"
            id="org.ttb.integration.views.TraceBrowserView"
            name="Erlang trace browser">
      </view>
      <view
            allowMultiple="false"
            category="org.erlide.views"
            class="org.ttb.integration.views.TreeViewerView"
            icon="icons/treeViewerView.gif"
            id="org.ttb.integration.views.TreeViewerView"
            name="Erlang tracing tree viewer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.ttb.integration.tracing"
               label="%tracingCategory">
            <command
                  commandId="org.ttb.integration.createtracepattern"
                  id="org.ttb.integration.createtracepattern"
                  style="push">
               <!--<visibleWhen>
                  <iterate>
                     <adapt
                           type="org.erlide.core.erlang.IErlFunctionClause">
                     </adapt>
                  </iterate>
               </visibleWhen>-->
            </command>
            <command
                  commandId="org.ttb.integration.createtracepatternwithnoarity"
                  id="org.ttb.integration.createtracepatternwithnoarity"
                  style="push">
            </command>
            <separator
                  name="org.ttb.integration.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.ttb.integration.removetracepattern"
                  id="org.ttb.integration.removetracepattern"
                  style="push">
            </command>
            <command
                  commandId="org.ttb.integration.removetracepatternwithnoarity"
                  id="org.ttb.integration.removetracepatternwithnoarity"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.ttb.integration.tracing"
            name="%tracingCategory">
      </category>
      <command
            category="org.ttb.integration.tracing"
            id="org.ttb.integration.createtracepattern"
            name="%createTracePattern">
      </command>
      <command
            category="org.ttb.integration.tracing"
            id="org.ttb.integration.createtracepatternwithnoarity"
            name="%createTracePatternWithNoArity">
      </command>
      <command
            category="org.ttb.integration.tracing"
            id="org.ttb.integration.removetracepattern"
            name="%removeTracePattern">
      </command>
      <command
            category="org.ttb.integration.tracing"
            id="org.ttb.integration.removetracepatternwithnoarity"
            name="%removeTracePatternWithNoArity">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.ttb.integration.ui.menu.CreateTracePatternHandler"
            commandId="org.ttb.integration.createtracepattern">
      </handler>
      <handler
            class="org.ttb.integration.ui.menu.CreateTracePatternWithNoArityHandler"
            commandId="org.ttb.integration.createtracepatternwithnoarity">
      </handler>
      <handler
            class="org.ttb.integration.ui.menu.RemoveTracePatternHandler"
            commandId="org.ttb.integration.removetracepattern">
      </handler>
      <handler
            class="org.ttb.integration.ui.menu.RemoveTracePatternWithNoArityHandler"
            commandId="org.ttb.integration.removetracepatternwithnoarity">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.erlide.ui.preferences"
            class="org.ttb.integration.preferences.TracingPreferencePage"
            id="org.ttb.integration.preferences.TracingPreferencePage"
            name="Tracing">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.ttb.integration.preferences.PreferenceInitializer">
      </initializer>
   </extension>
</plugin>
