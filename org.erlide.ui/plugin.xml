   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
            description="Hide non-Erlang projects"
            id="org.erlide.ui.navigator.filters.hideNonJavaProjects"
            name="Hide non-Erlang projects">
         <filterExpression>
            <not>
               <or>
                  <instanceof
                        value="org.eclipse.core.resources.IFolder">
                  </instanceof>
                  <instanceof
                        value="org.eclipse.core.resources.IFile">
                  </instanceof>
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <test
                           property="org.eclipse.core.resources.projectNature"
                           value="org.erlide.core.erlnature">
                     </test>
                  </adapt>
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <test
                           property="org.eclipse.core.resources.open"
                           value="false">
                     </test>
                  </adapt>
               </or>
            </not>
         </filterExpression>
      </commonFilter>
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.erlide.ui.navigator.ErlangFileContentProvider"
            icon="icons/erlang_editor.gif"
            id="org.erlide.ui.navigator.erlangContent"
            labelProvider="org.erlide.ui.views.outline.ErlangLabelProvider"
            name="Erlang File Contents"
            priority="normal">
         <triggerPoints>
            <or>
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.extension"
                        value="erl">
                  </test>
               </and>
               <instanceof
                     value="org.erlide.core.erlang.IErlElement">
               </instanceof>
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.extension"
                        value="hrl">
                  </test>
               </and>
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.extension"
                        value="yrl">
