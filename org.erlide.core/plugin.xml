<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="codepath" name="codepath" schema="schema/codepath.exsd"/>
   <extension-point id="javaRpcStubs" name="javaRpcStubs" schema="schema/javaRpcStubs.exsd"/>

     <extension
         id="erlnature"
         name="Erlang Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.erlide.core.ErlangProjectNature">
         </run>
      </runtime>
      <builder id="org.erlide.core.erlbuilder"/>
   </extension>
   <extension
         id="erlbuilder"
         name="Erlang builder"
         point="org.eclipse.core.resources.builders">
      <builder >
         <run
               class="org.erlide.core.builder.ErlangBuilder">
         </run>
      </builder>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            default-charset="ISO-8859-1"
            file-extensions="erl,hrl,yrl"
            id="org.erlide.core.content.erlang"
            name="Erlang source file"
            priority="normal"/>
   </extension>
   <extension
         id="problemmarker"
         name="Erlang problem"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         id="taskmarker"
         name="Erlang task"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.taskmarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         point="org.erlide.core.codepath">
      <bundle_dir
            path="/ebin">
      </bundle_dir>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourcePathComputers">
      <sourcePathComputer
            class="org.erlide.runtime.ErlangSourcePathComputerDelegate"
            id="org.erlide.core.sourcepathcomputer"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
            class="org.erlide.runtime.ErlangSourceLookupDirector"
            id="org.erlide.core.erlangLocatorDirector"
            name="erlide-launching.erlangSourceLocator"/>
   </extension>
    <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="org.erlide.runtime.debug.ErlangLineBreakpoint"
            id="erlang.lineBreakpoint"
            markerType="org.erlide.core.erlang.lineBreakpoint.marker"/>
   </extension>
  <extension
         id="erlang.lineBreakpoint.marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.debug.core.breakpointMarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.processFactories">
      <processFactory
            class="org.erlide.runtime.backend.internal.ErtsProcessFactory"
            id="org.erlide.core.backend.ertsprocessfactory"/>
   </extension>
   <extension
         point="org.erlide.core.codepath">
      <bundle_dir
            path="/ebin">
      </bundle_dir>
   </extension>
   <extension
         id="org.erlide.core.erlang.lineBreakpoint.marker"
         name="Erlang Line Breakpoint Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.debug.core.lineBreakpointMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>


</plugin>
